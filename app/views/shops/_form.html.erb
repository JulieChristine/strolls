<%= render "layouts/errors", :object => @shop %>

<%= form_for @shop do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.label :area %>
  <%= f.text_field :area %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :picture %>
  <%= f.text_field :picture %>
  <%= f.label :opening_hours %>
  <%= f.text_field :opening_hours %>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <%= f.label :website %>
  <%= f.text_field :website %>

  <%= f.submit  %>
<% end %>
